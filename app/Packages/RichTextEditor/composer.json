{
    "name": "soybean15/rich-text-editor",
    "type": "library",
    "description": "A Laravel package for Rich Text Editor with Quill",
    "keywords": ["laravel", "rich-text-editor", "quill"],
    "license": "MIT",
    "authors": [
        {
            "name": "Marlon Padilla",
            "email": "marlonpadilla1593@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.9"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "Soybean15\\RichTextEditor\\": "Packages/RichTextEditor/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=rich-text-editor-assets --ansi --force"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Soybean15\\RichTextEditor\\RichTextEditorServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
